{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "types": ["vitest/globals", "vite/client", "jsdom"],
    "lib": ["es2023"]
  },
  "include": [
    "vitest.config.ts",
    "vite.config.ts",      // ★ これが無いと TS6307 になります
    "tests/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
